[Unit]
Description=Kubernetes Controller Manager
Documentation=https://github.com/kubernetes/kubernetes
After=network.target

[Service]
ExecStart=/usr/bin/kube-controller-manager \
  --kubeconfig={{ remote_src }}controller-manager.kubeconfig \
  --bind-address={{ master_private }} \
  --leader-elect=true \
  --controllers=* \
  --cluster-name={{ cluster_name }} \
  --cluster-cidr={{ private_net ~ private_cidr}} \
  --service-cluster-ip-range={{ private_net ~ private_cidr }} \
  --v=2 \
  --cluster-signing-cert-file={{ remote_cert ~ "ca.crt" }} \
  --cluster-signing-key-file={{ remote_cert ~ "ca.key" }} \
  --root-ca-file={{ remote_cert ~ "ca.crt" }}
  
Restart=always
RestartSec=10s

[Install]
WantedBy=multi-user.target