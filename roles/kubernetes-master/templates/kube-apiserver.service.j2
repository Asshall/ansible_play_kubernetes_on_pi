[Unit]
Description=Kubernetes API Server
Documentation=https://github.com/kubernetes/kubernetes
After=network.target

[Service]
ExecStart=/usr/bin/kube-apiserver \
  --apiserver-count=1 \
  --allow-privileged=true \
  {# --enable-admission-plugins=NamespaceLifecycle,LimitRanger,ServiceAccount,PersistentVolumeLabel,DefaultStorageClass,ResourceQuota,DefaultTolerationSeconds \ #}
  --bind-address={{ master_private }} \
  --service-cluster-ip-range={{ private_net ~ private_cidr }} \
  --service-node-port-range=30000-32767 \
  --etcd-servers={{ etcd_addr }} \
  --etcd-cafile={{ remote_cert ~ "ca.pem" }} \
  {# --etcd-certfile={{ remote_cert ~ "kubernetes.pem" }} \
  --etcd-keyfile={{ remote_cert ~ "kubernetes-key.pem" }} \ #}
  --tls-cert-file={{ remote_cert ~ "kubernetes.pem" }} \
  --tls-private-key-file={{ remote_cert ~ "kubernetes-key.pem" }} \
  --kubelet-certificate-authority={{ remote_cert ~ "ca.pem" }} \
  --authorization-mode=ABAC \
  --authorization-policy-file={{ remote_src ~ "auth.json" }}
Restart=always
RestartSec=10s

[Install]
WantedBy=multi-user.target


